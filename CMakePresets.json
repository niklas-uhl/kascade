{
  "version": 8,
  "$schema": "https://cmake.org/cmake/help/latest/_downloads/3e2d73bff478d88a7de0de736ba5e361/schema.json",
  "configurePresets": [
    {
      "name": "dev",
      "generator": "Unix Makefiles",
      "binaryDir": "build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
	"KASCADE_BUILD_TESTS": "ON",
        "KASCADE_CXX_FLAGS": "-Wall;-Wextra;-pedantic;-DKASSERT_ASSERTION_LEVEL=30;-DSPDLOG_ACTIVE_LEVEL=SPDLOG_LEVEL_TRACE"
      }
    },
    {
      "name": "experiments",
      "generator": "Unix Makefiles",
      "binaryDir": "build-$env{SLURMD_NODENAME}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "KAMPING_ASSERTION_LEVEL": "none",
        "CMAKE_CXX_FLAGS": "-march=native -DKASSERT_ASSERTION_LEVEL=0 -DSPDLOG_ACTIVE_LEVEL=SPDLOG_LEVEL_INFO"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "dev",
      "configurePreset": "dev"
    },
    {
      "name": "experiments",
      "configurePreset": "experiments"
    }
  ]
}
